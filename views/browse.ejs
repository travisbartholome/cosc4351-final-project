<!DOCTYPE html>
<html>
<!-- stock head file that contains all pages metadata-->
<head>
 <%-include ('head.ejs') -%> 
</head>
<body>
  <header>
  <%-include ('header.ejs') -%>
  </header>
  <!-- Just testing whether the data rendering works -->
  <!-- This syntax might be useful later on when making the actual page template -->
  <% products.forEach(function(product) { %>
    <p>Name: <%= product.name %> - Price: $<%= product.price.toFixed(2) %></p>
    <img src="/static/images/<%= product.image %>" alt="Product image" height="150" />
  <% }); %>
  <footer class = "container-fluid text-center">
    <%-include ('footer.ejs') -%>
  </footer>
</body>
</html>
