<!DOCTYPE html>
<html>
<!-- stock head file that contains all pages metadata-->
<head>
 <%-include ('head.ejs') -%> 
 <link rel="stylesheet" href="/static/styles/browse.css" />
</head>
<body>
  <header>
    <%-include ('header.ejs') -%>
  </header>
  <div class="content-container">
    <form action="validate" method="GET">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <form>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label for="inputFirstname">First name</label>
                                <input type="text" class="form-control" id="inputFirstname" placeholder="First name">
                            </div>
                            <div class="col-sm-6">
                                <label for="inputLastname">Last name</label>
                                <input type="text" class="form-control" id="inputLastname" placeholder="Last name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label for="inputAddressLine1">Address</label>
                                <input type="text" class="form-control" id="inputAddressLine1" placeholder="Street Address" name="street1">
                            </div>
                            <div class="col-sm-6">
                                <label for="inputAddressLine2">Address (Line 2)</label>
                                <input type="text" class="form-control" id="inputAddressLine2" placeholder="Line 2" name="street2">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label for="inputCity">City</label>
                                <input type="text" class="form-control" id="inputCity" placeholder="City" name="city">
                            </div>
                            <div class="col-sm-3">
                                <label for="inputState">State</label>
                                <input type="text" class="form-control" id="inputState" placeholder="State" name="state">
                            </div>
                            <div class="col-sm-3">
                                <label for="inputPostalCode">Postal Code</label>
                                <input type="text" class="form-control" id="inputPostalCode" placeholder="Postal Code" name="zipcode">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label for="inputContactNumber">Contact Number</label>
                                <input type="number" class="form-control" id="inputContactNumber" placeholder="Contact Number">
                            </div>
                            <div class="col-sm-6">
                                <label for="inputWEmail">Email</label>
                                <input type="text" class="form-control" id="inputEmail" placeholder="Email">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary px-4 float-right">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </form> 

  </div>
  <footer class="container-fluid text-center">
    <%-include ('footer.ejs') -%>
  </footer>
  </body>
</html>
